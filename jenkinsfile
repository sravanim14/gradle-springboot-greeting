node {
   stage ('Checkout') {
    checkout scm
   }
  
   stage ('Build') {  
    if (isUnix()) {
      sh './gradlew clean build'
    } 
    else {
      bat './gradlew.bat clean build'
    }
   }
   
   stage ('test') {
    if (isUnix()) {
      sh './gradlew test'
    } 
    else {
      bat './gradlew.bat test'
    }
   }
    stage('sonar-scanner') {
	if (isUnix()) {
      sh './gradlew test'
    } 
    else {
	  bat './gradlew.bat sonarqube -Dsonar.host.url=http://localhost:9000 -Dsonar.login=5ebe2d19e61772c18a1764064ba08589a8cc5326'
	 }
	}
   stage ('Docker Build') {
    if (isUnix()) {
      sh 'docker build -t sravani/springboot-greetings:latest .'
    } 
    else {
      bat 'docker build -t sravani/springboot-greetings:latest .'
    }
   }
}
