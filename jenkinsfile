node {
   stage ('Checkout') {
    checkout scm
   }
  
   stage ('Build') {  
    if (isUnix()) {
      sh './gradlew clean build'
    } 
    else {
      bat './gradlew.bat clean build'
    }
   }
   
   stage ('test') {
    if (isUnix()) {
      sh './gradlew test'
    } 
    else {
      bat './gradlew.bat test'
    }
   }
    
	stage('nexus_artifact_upload'){
	if (isUnix()) {
      sh './gradlew test'
    } 
    else {
	withCredentials([usernamePassword(credentialsId: 'admin123', passwordVariable: 'NEXUS_PASSWORD', usernameVariable: 'admin')]) {
    bat './gradlew.bat -DNEXUS_PASSWORD=$NEXUS_PASSWORD -DNEXUS_USER=$NEXUS_USER upload --debug'
}   stage ('Docker Build') {
    if (isUnix()) {
      sh 'docker build -t sravani/springboot-greetings:latest .'
    } 
    else {
      bat 'docker build -t sravani/springboot-greetings:latest .'
    }
   }
}
