node {
   stage ('Checkout') {
    checkout scm
   }
  
   stage ('Build') {  
    if (isUnix()) {
      sh './gradlew clean build'
    } 
    else {
      bat './gradlew.bat clean build'
    }
   }
   
   stage ('test') {
    if (isUnix()) {
      sh './gradlew test'
    } 
    else {
      bat './gradlew.bat test'
    }
   }
    
	stage('nexus_artifact_upload'){
	if (isUnix()) {
      sh './gradlew test'
    } 
    else {
	  def nexusUser = "$System.env.NEXUS_USER"
      def nexusPass = "$System.env.NEXUS_PASS"

      uploadArchives {
       repositories {
        mavenDeployer {
            repository(url: "http://localhost:8081/repository/Spring_Greetings/") {
                authentication(userName: admin, password: admin123)
              }
           }
       }
	   }
   }	
    stage ('Docker Build') {
    if (isUnix()) {
      sh 'docker build -t sravani/springboot-greetings:latest .'
    } 
    else {
      bat 'docker build -t sravani/springboot-greetings:latest .'
    }
   }
}
