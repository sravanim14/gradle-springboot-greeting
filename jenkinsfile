node {
   stage ('Checkout') {
    checkout scm
   }
  
   stage ('Build') {  
    if (isUnix()) {
      sh './gradlew clean build'
    } 
    else {
      bat './gradlew.bat clean build'
    }
   }
   
   stage ('test') {
    if (isUnix()) {
      sh './gradlew test'
    } 
    else {
      bat './gradlew.bat test'
    }
   }
    
	stage('nexus_artifact_upload'){
	if (isUnix()) {
      sh './gradlew test'
    } 
    else {
	Stage 'Nexus Deploy'
     nexusArtifactUploader
        artifactId: 'com.example.project',
        file: 'build/libs/gs-spring-boot-0.1.0.jar',
        groupId: 'Nexus_upload',
        type:'jar',
        nexusPassword: 'admin123',
        nexusUrl: 'http://localhost:8081/repository/',
        nexusUser: 'admin',
        nexusVersion: 'nexus3',
        protocol: 'http',
        repository: 'Spring_Greetings',
        version: '0.0.1-SNAPSHOT'
    }
   }	
    stage ('Docker Build') {
    if (isUnix()) {
      sh 'docker build -t sravani/springboot-greetings:latest .'
    } 
    else {
      bat 'docker build -t sravani/springboot-greetings:latest .'
    }
   }
}
